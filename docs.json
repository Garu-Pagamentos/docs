{
  "$schema": "https://mintlify.com/schema.json",
  "openapi": "https://garu.com.br/api/swagger-json",
  "theme": "mint",
  "name": "Garu",
  "description": "Documentação oficial da API Garu - Gateway de pagamentos que simplifica a gestão e apoia empreendedores no seu crescimento. Integre PIX, Cartão de Crédito e Boleto em minutos.",
  "metadata": {
    "og:site_name": "Garu Docs",
